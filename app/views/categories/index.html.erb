<h2>Our Product Categories</h2>
<hr>
<div class="row">
  <% @categories.each do |c| %>
    <div class="col-sm-3 col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(c.image_url), category_path(c) %>
        <div class="caption">
          <h3><%= c.title %></h3>
          <span class="badge"><%= c.products.count %></span> products available
          <hr>
          <p><%= c.description %></p>
          <hr>
          <p><%= link_to "visit category â–¶", category_path(c), {:class => 'btn-sm btn-primary', :role => "button"} %></p>
        </div>
      </div>
    </div>
<% end %>    
</div>
